# ============================================
# NeuroFlow â€” Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# ---- MQTT Broker ----
MQTT_BROKER_HOST=mqtt-broker
MQTT_BROKER_PORT=1883
MQTT_TOPIC_DETECTIONS=neuroflow/detections
MQTT_TOPIC_COMMANDS=neuroflow/commands
MQTT_CLIENT_ID_EDGE=edge-gateway-01
MQTT_CLIENT_ID_SERVER=traffic-server

# ---- Edge Gateway ----
CAMERA_SOURCE=rtsp://192.168.1.100:554/stream
CAMERA_FALLBACK=0
YOLO_MODEL_PATH=yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
DETECTION_INTERVAL_MS=500
INTERSECTION_ID=INT-001

# ---- PostgreSQL Database ----
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=neuroflow
POSTGRES_USER=neuroflow_admin
POSTGRES_PASSWORD=changeme_strong_password_here

# ---- Traffic Controller Server ----
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DATABASE_URL=postgresql+asyncpg://neuroflow_admin:changeme_strong_password_here@postgres:5432/neuroflow

# ---- Signal Timing Parameters ----
MIN_GREEN_DURATION_SEC=15
MAX_GREEN_DURATION_SEC=90
DEFAULT_GREEN_DURATION_SEC=30
YELLOW_DURATION_SEC=5
DENSITY_SCALING_FACTOR=2.5

# ---- React Dashboard ----
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws/live
